Texture2D m_Texture;
SamplerState SampleType2;

cbuffer DiffuseBuffer
{
    float4 diffuseColor;
};

struct Pin
{
	float4 position : SV_POSITION;
	float2 tex : TEXCOORD;
};

float4 psMain(Pin input) : SV_TARGET
{
	float4 textureColor = m_Texture.Sample(SampleType2, input.tex);
	float4 output;

	output = diffuseColor * textureColor;
	return output;
}